{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/links/(.*)",
      "dest": "/api/links"
    },
    {
      "src": "/api/uploads/(.*)",
      "dest": "/api/uploads"
    },
    {
      "src": "/l/(.*)",
      "dest": "/api/links?code=$1"
    },
    {
      "src": "/f/(.*)",
      "dest": "/api/uploads?code=$1"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}
